@font-face {
    font-family: "Muli";
    src: url("fonts/Muli-Regular.ttf") format("truetype");
}

@font-face {
    font-family: "Muli";
    src: url("fonts/Muli-Bold.ttf") format("truetype");
    font-weight: bold;
}

@font-face {
    font-family: "Muli";
    src: url("fonts/Muli-ExtraBold.ttf") format("truetype");
    font-weight: 800;
}

primary-font =  "Muli", Arial, Helvetica;
header-font = "Muli";

/* Styles for specific SVG images. */
#corner-flourish {
    display: none;
}

/* General styles */
html {
    font-size: 16px;
}

.a11y-theme {
    font-family: primary-font;

    h1, h2, h3 {
        font-family: header-font;
        text-transform: uppercase;
        font-weight: bold;
    }
}


/* Skip links */
#skip {
    float: left;
    height: 0rem;

    a {
        margin-top: 1rem;

        &, &:hover, &:visited {
            height: 1px;
            left: -10000px;
            overflow: hidden;
            position: absolute;
            top: auto;
            width: 1px;
        }

        &:active, &:focus {
            height: auto;
            width: auto;
            left: auto;
            padding: 1rem;
            z-index: 1;
        }
    }
}

/* UI Options. */
.fl-prefsEditor-separatedPanel .fl-panelBar {
  
    .fl-prefsEditor-buttons {
        margin-right: 5em;
    }

    .fl-prefsEditor-showHide {
        min-width: 7em;
    }
}

/* Site Header */
.a11y-site-header {
    margin-top: 1.2rem;

    // override Foundation's padding.
    padding-bottom: 1rem;
    padding-left: 0;
    padding-right: 0;

    .a11y-site-title {
        margin: 0;
        display: inline-block;
        text-transform: none;
        font-size: 1.7rem;
    }

    .a11y-site-title a {
        font-weight: bolder;
        display:flex;
        align-items:flex-end;
    }

    nav {
        display: inline;
    }
}

.a11y-main-nav {

    .title-bar {
        display: inline-block;
    }

    .menu-icon {
        width: 2.5rem;
        height: 2.5rem;
        display:flex;
        align-items:end;
        margin-top: 1rem;

        &:before {
            font-size: 1.8rem;
            content: "\2630";
            position: absolute;
            top: -0.4rem;
            left: 0.4rem;
        }

        &:after {
            display:none;
            visibility: hidden;
        }
    }
}

/* Shared navigation styles for all screen sizes. */
.a11y-main-nav-items {
    ul {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    li {
        width: 100%;
    }

    a {
        display: inline-block;
        text-transform: uppercase;
    }
}

/* Navigation for medium screens and larger. */
@media screen and (min-width: 40em) {
    .a11y-main-nav-items {
        width: 100%;

        .menu-item:last-of-type {
            border-right: none;
        }

        .menu li a {
            padding: 0.7rem 0.8rem;
        }
    }
}

/* Main - Front Page */
.home .a11y-site-main {
    padding: 0;
    overflow-x: hidden;
}

/* Main - All other pages. */
.category,
.single {
    main {
        border: none;
        padding: 1.6rem;

        a:focus,
        a:hover {
            text-decoration: underline;
        }
    }

}

/* Site Tagline (appears on front page only) */
.a11y-site-tagline {
    padding: 1rem;

    display:flex;
    align-items:center;
    font-size: 1.2rem;
}

/* The Three Panels that appear on the front page. */
.a11y-panel-container {
    padding: 1rem 2rem;

    &.row {
        // override Foundation margins.
        margin-left: 0;
        margin-right: 0;
    }
}

.a11y-front-panel {
    &.columns {
        padding: 0;
    }

    h1 {
        font-size: 1.2rem;
        text-transform: none;
    }

    h1, section, .textwidget {
        padding: 0.5rem 1.5rem;
    }
}

/* Site Sidebar (appears on all other pages, except front page) */
.a11y-site-aside {
    padding: 1rem 1.6rem;

    ul {
        list-style: none;
        margin: 0;
    }

    .a11y-sidebar-current:before {
        content: "\25B6";
    }

    .a11y-sidebar-category-link {
        text-transform: uppercase;
    }

    a {
        padding: 0.4rem;
        margin-bottom: 0.2rem;
        width: 100%;
        display: inline-block;
    }

    h1, h2, h3 {
        font-size: 1.2rem;
    }
}

/* Main Content Area Styles */
.a11y-site-main h1, .a11y-entry-header h1 {
    font-size: 2.6rem;
}

.a11y-site-main article {
    h1, h2, h3 {
        margin-bottom: 0.8rem;
        margin-top: 2rem;
    }

    h1 {
        font-size: 2rem;
    }

    h2 {
        font-size: 1.6rem;
    }

    h3 {
        font-size: 1.2rem;
    }
}

/* Footer */
.a11y-site-footer {
    padding: 1rem;
}

/* Styles for Medium resolution and larger */
@media screen and (min-width: 40em) {
      #corner-flourish {
          position: absolute;
          top: -4rem;
          right: 0rem;
          width: 6rem;
          height: 12rem;
          display: inline;
      }

      #logo {
          width: 4.1rem;
          height: 5.2rem;
      }

      .fl-prefsEditor-separatedPanel .fl-panelBar .fl-prefsEditor-buttons {
          margin-right: 10rem;
      }

      .fl-prefsEditor-separatedPanel .fl-panelBar.fl-panelBar-wideScreen {
          flex-flow: row wrap;
          display: flex;
          justify-content: flex-end;
          background-color: inherit;
          border-bottom: none;
      }

     .a11y-site-header {
         margin-bottom: 0;
         position: relative;
         padding-bottom: 0;

         h1 {
             font-size: 2rem;
         }
     }

     .a11y-main-nav-items ul li {
          flex: 1 0 auto;
          width: auto;
          margin: 0.2rem;
      }

      .single,
      .category{
          min-width: 40rem;
      }

      .a11y-site-aside {
          padding: 5rem 1.6rem 25rem 1.6rem;
          background-position: left bottom;
          background-repeat: no-repeat;
          background-size: 18rem auto;

          ul ul {
              margin-left: 1rem;
          }
      }

      .a11y-site-tagline {
          margin: 0 -10rem;
          padding: 3rem 15rem;
          min-height: 16rem;
          font-size: 1.6rem;
          background-position: 0 -10rem;
      }

      .a11y-site-footer {
          background-position: left top;
          background-repeat: no-repeat;

          background-size: 18rem auto;
      }

      .single .a11y-site-main, .category .a11y-site-main {
          padding-bottom: 4rem;
      }
}


/* Large screens and bigger */
@media screen and (min-width: 64em) {
      .a11y-site-tagline {
          background-position: 83% 3.6rem, 9rem -5rem;
          background-size: 14% auto, 82% auto;

          padding: 3rem 50% 3rem 15rem;
          min-height: 25rem;
      }

      .a11y-site-aside ul ul {
          margin-left: 2rem;
      }
}
